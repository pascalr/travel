<!doctype html>
<html lang="<%- locale %>">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class='image-header-ctn'>
      <div class='image-header-title'>
        <h1>Tha√Ølande</h1>
      </div>
      <img src='/thailand/thailand_elephant_01.jpg' style='width: 100vw; aspect-ratio: 3 / 2;'></img>
    </div>
    <div class='trunk'>
      <% trip.images.forEach((image, i) => { %>
        <div class='section'>
          <img src='/thailand/<%- image %>' class='picture' style='width: 400px; order: <%- i%2!==0 ? 1 : 3 %>'></img>
          <div style='width: 2em; height: 1em; order: 2;'></div>
          <div style='order: <%- i%2===0 ? 1 : 3 %>'>
            <div style='width: 16em; border-bottom: 3px solid #603616; height: 2em;'></div>
            <div style='width: 20em; border-bottom: 1px solid #603616; height: 2em;'></div>
            <div style='width: 20em; border-bottom: 1px solid #603616; height: 2em;'></div>
            <div style='width: 20em; border-bottom: 1px solid #603616; height: 2em;'></div>
            <div style='width: 20em; border-bottom: 1px solid #603616; height: 2em;'></div>
          </div>
        </div>
        <% if (false && i != trip.images.length-1) { %><div style='border-bottom: 1px solid #603616; width: 50%; margin: auto;'></div><% } %>
      <% }) %>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
