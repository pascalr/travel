<!doctype html>
<html lang="<%- locale %>">
  <head>
    <%- include('partials/head') %>
  </head>
  <body id='index'>
    <%- include('partials/navbar') %>
    <% Object.keys(tripsByYear).sort().reverse().forEach((year) => { %>
      <div class='year'><%- year %></div>
      <% tripsByYear[year].forEach((place, i) => { %>
        <% trip = trips[place]Â %>
        <div class='<%- trip.place %>'>
          <div class='bg-color bg-radial color'>
            <div class='wide-trunk'>
              <div class='section'>
                <h2 class='handwriting d-lg-none text-center' style='font-size: 3em; margin: 0;'><%- trip.name %></h2>
                <div style='order: <%- i%2!==0 ? 1 : 3 %>; flex-shrink: 1; max-width: 804px; margin: auto;'>
                  <a href='/t/<%- trip.place %>'>
                    <div class='frame'>
                      <img src='/<%- trip.image %>' class='picture'></img>
                    </div>
                  </a>
                </div>
                <div class='sep'></div>
                <div class='desc handwriting max-w-lg-15em' style='order: <%- i%2===0 ? 1 : 3 %>; flex-shrink: 1;'>
                  <h2 class='d-none d-lg-block'><%- trip.name %></h2>
                  <p style='line-height: 1.5em;'><%- trip.description %></p>
                  <p><a href='/t/<%- trip.place %>'>En savoir plus...</a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% if (i != trips.length-1) { %><div class='separator'></div><% } %>
      <% }) %>
    <% }) %>
    <%- include('partials/footer') %>
  </body>
</html>
