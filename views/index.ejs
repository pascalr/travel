<!doctype html>
<html lang="<%- locale %>">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <% trips.forEach((trip, i) => { %>
      <div style='background-color: <%- trip.backgroundColor %>; color: <%- trip.color %>'>
        <div class='trunk'>
          <div class='section'>
            <img src='/<%- trip.image %>' class='picture' style='order: <%- i%2!==0 ? 1 : 3 %>'></img>
            <div style='width: 2em; height: 1em; order: 2;'></div>
            <div style='order: <%- i%2===0 ? 1 : 3 %>'>
              <div style='width: 20em; border-bottom: 3px solid #603616; height: 2em;'>
                <h2><%- trip.name %></h2>
              </div>
              <div style='width: 25em; border-bottom: 1px solid #603616; height: 2em;'></div>
              <div style='width: 25em; border-bottom: 1px solid #603616; height: 2em;'></div>
              <div style='width: 25em; border-bottom: 1px solid #603616; height: 2em;'></div>
              <div style='width: 25em; border-bottom: 1px solid #603616; height: 2em;'></div>
            </div>
          </div>
        </div>
      </div>
      <% if (false && i != trips.length-1) { %><div style='border-bottom: 1px solid #603616; width: 50%; margin: auto;'></div><% } %>
    <% }) %>
    <%- include('partials/footer') %>
  </body>
</html>
