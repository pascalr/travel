<!doctype html>
<html lang="<%- locale %>">
  <head>
    <%- include('partials/head') %>
  </head>
  <body class='<%- trip.place %>'>
    <%- include('partials/navbar') %>
    <div class='image-header-ctn'>
      <div class='image-header-title'>
        <h1><%- trip.name %></h1>
      </div>
      <img src='/<%- trip.image %>' style='width: 100vw; aspect-ratio: 3 / 2;'></img>
    </div>
    <div class='bg-color color'>
      <div class='trunk'>
        <% trip.images.forEach((image, i) => { %>
          <% let description = trip.descriptions[image.split('.')[0]] %>
          <div class='section'>
            <div style='order: <%- i%2!==0 ? 1 : 3 %>; flex-shrink: 2; width: 600px;'>
              <img src='/<%- trip.place %>/<%- image %>' class='picture' title='<%- image %>'></img>
            </div>
            <div></div>
            <div class='desc' style='order: <%- i%2===0 ? 1 : 3 %>;'>
              <% if (description) { %>
                <div class='handwriting'><u><%- description %></u></div>
              <% } else { %>
                <div style='width: 20em; border-bottom: 3px solid black; height: 2em;'></div>
                <div style='width: 25em; border-bottom: 1px solid black; height: 2em;'></div>
                <div style='width: 25em; border-bottom: 1px solid black; height: 2em;'></div>
                <div style='width: 25em; border-bottom: 1px solid black; height: 2em;'></div>
                <div style='width: 25em; border-bottom: 1px solid black; height: 2em;'></div>
              <% }Â %>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
