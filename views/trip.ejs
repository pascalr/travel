<!doctype html>
<html lang="<%- locale %>">
  <head>
    <%- include('partials/head') %>
  </head>
  <body class='<%- trip.place %>'>
    <%- include('partials/navbar') %>
    <div class='image-header-ctn'>
      <div class='image-header-title'>
        <h1><%- trip.name %></h1>
      </div>
      <img src='/<%- trip.image %>' style='width: 100vw; aspect-ratio: 3 / 2;'></img>
    </div>
    <div class='bg-color color'>
      <div class='wide-trunk'>
        <% trip.images.forEach((image, i) => { %>
          <% let description = trip.descriptions[image.split('.')[0]] %>
          <div class='section'>
            <div style='order: <%- i%2!==0 ? 1 : 3 %>; flex-shrink: 1; max-width: 804px;'>
              <img src='/<%- trip.place %>/<%- image %>' class='picture' title='<%- image %>'></img>
            </div>
            <div></div>
            <div class='desc' style='order: <%- i%2===0 ? 1 : 3 %>;'>
              <div class='handwriting'><u><%- description || ' &nbsp;'.repeat(76) %></u></div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
