<!doctype html>
<html lang="<%- locale %>">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class='image-header-ctn'>
      <div class='image-header-title'>
        <h1><%- trip.name %></h1>
      </div>
      <img src='/<%- trip.image %>' style='width: 100vw; aspect-ratio: 3 / 2;'></img>
    </div>
    <div style='background-color: <%- trip.backgroundColor %>; color: <%- trip.color %>'>
      <div class='trunk'>
        <% trip.images.forEach((image, i) => { %>
          <% let description = trip.descriptions[image.split('.')[0]] %>
          <div class='section'>
            <img src='/<%- trip.place %>/<%- image %>' class='picture' style='order: <%- i%2!==0 ? 1 : 3 %>; border-image: <%- trip.borderImage %>; flex-shrink: 2;' title='<%- image %>'></img>
            <div style='width: 3em; height: 1em; order: 2;'></div>
            <div class='desc' style='order: <%- i%2===0 ? 1 : 3 %>;'>
              <% if (description) { %>
                <div class='handwriting'><u><%- description %></u></div>
              <% } else { %>
                <div style='width: 20em; border-bottom: 3px solid <%- trip.color %>; height: 2em;'></div>
                <div style='width: 25em; border-bottom: 1px solid <%- trip.color %>; height: 2em;'></div>
                <div style='width: 25em; border-bottom: 1px solid <%- trip.color %>; height: 2em;'></div>
                <div style='width: 25em; border-bottom: 1px solid <%- trip.color %>; height: 2em;'></div>
                <div style='width: 25em; border-bottom: 1px solid <%- trip.color %>; height: 2em;'></div>
              <% }Â %>
            </div>
          </div>
          <% if (false && i != trip.images.length-1) { %><div style='border-bottom: 1px solid #603616; width: 50%; margin: auto;'></div><% } %>
        <% }) %>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
