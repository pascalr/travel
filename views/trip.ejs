<!doctype html>
<html lang="<%- locale %>">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class='image-header-ctn'>
      <div class='image-header-title'>
        <h1><%- trip.name %></h1>
      </div>
      <img src='/<%- trip.image %>' style='width: 100vw; aspect-ratio: 3 / 2;'></img>
    </div>
    <div style='background-color: <%- trip.backgroundColor %>; color: <%- trip.color %>'>
      <div class='trunk'>
        <% trip.images.forEach((image, i) => { %>
          <div class='section'>
            <img src='/thailand/<%- image %>' class='picture' style='order: <%- i%2!==0 ? 1 : 3 %>'></img>
            <div style='width: 2em; height: 1em; order: 2;'></div>
            <div style='order: <%- i%2===0 ? 1 : 3 %>'>
              <div style='width: 20em; border-bottom: 3px solid #603616; height: 2em;'></div>
              <div style='width: 25em; border-bottom: 1px solid #603616; height: 2em;'></div>
              <div style='width: 25em; border-bottom: 1px solid #603616; height: 2em;'></div>
              <div style='width: 25em; border-bottom: 1px solid #603616; height: 2em;'></div>
              <div style='width: 25em; border-bottom: 1px solid #603616; height: 2em;'></div>
            </div>
          </div>
          <% if (false && i != trip.images.length-1) { %><div style='border-bottom: 1px solid #603616; width: 50%; margin: auto;'></div><% } %>
        <% }) %>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
